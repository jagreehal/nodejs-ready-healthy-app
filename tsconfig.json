{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "sourceMap": true,
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}
